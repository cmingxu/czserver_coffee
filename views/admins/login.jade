extend ../layout

block content
  form.form-horizontal(action="/admin/do_login", method="POST")
    fieldset
      legend 登录
      .control-group
        label.control-label(for="email") Email
        .controls
          input(name="email", type='input')

      .control-group
        label.control-label(for="password") Password
        .controls
          input(type='password', name="password")

      .form-actions
        button(type='submit').btn.btn-primary 登录
